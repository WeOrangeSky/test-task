{
	"builders": [
		{
			"name": "Apache-PHP",
			"type": "docker",
			"image": "alpine:latest",
			"run_command": ["-d", "-i", "-t", "--entrypoint=/bin/sh", "--", "{{.Image}}"],
			"commit": true
		}
	],
	"provisioners": [
		{
			"type": "shell",
			"inline": [
			  "apk add ansible"
			]
		},
		{
			"type": "ansible",
			"playbook_file": "./vars/apache-php.yml"
		}
	],
	"post-processors": [
		{
			"type": "docker-tag",
			"repository": "packer-ApachePHP",
			"tag": "0.1"
		}
	]
}