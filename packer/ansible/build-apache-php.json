{
	"builders": [
		{
			"name": "Apache-PHP",
			"type": "docker",
			"image": "alpine:latest",
			"run_command": ["-d", "-i", "-t", "--entrypoint=/bin/sh", "--", "{{.Image}}"],
			"commit": "true",
			"changes": [
				"EXPOSE 80 443",
				"ENTRYPOINT [\"/usr/sbin/httpd\",\"-D\",\"FOREGROUND\"]"
			]
		},
		{
			"name": "MySQL",
			"type": "docker",
			"image": "alpine:latest",
			"run_command": ["-d", "-i", "-t", "--entrypoint=/bin/sh", "--", "{{.Image}}"],
			"commit": "true",
			"changes": [
				"EXPOSE 3306",
				"VOLUME [\"/var/lib/mysql\"]",
				"ENTRYPOINT [\"/usr/bin/mysqld\",\"--user=mysql\"]"
			]
		}
	],
	"variables": {
		"mysql_user": "mysql",   
		"mysql_password": "mysql"
	},
	"provisioners": [
		{
			"type": "shell",
			"inline": [
			  "apk add ansible"
			]
		},
		{
			"type": "ansible-local",
			"playbook_file": "./deploy.yml",
			"role_paths": "./roles/lamp/",
			"staging_directory": "/tmp/playbooks/",
			"extra_arguments": ["--tags \"apache\""],
			"only": ["Apache-PHP"]
		},
		{
			"type": "ansible-local",
			"playbook_file": "./deploy.yml",
			"role_paths": "./roles/lamp/",
			"staging_directory": "/tmp/playbooks/",
			"extra_arguments": ["--tags \"mysql\"",
				"--extra-vars \"",
				"\"mysql_user={{ user `mysql_user` }}\"",
				"\"mysql_password={{ user `mysql_password` }}\"\""
				],
			"only": ["MySQL"]
		},
		{
			"type": "shell",
			"inline": [
			  "apk del ansible"
			]
		}
	],
	"post-processors": [
		{
			"type": "docker-tag",
			"repository": "packer-apachephp",
			"tag": "0.1",
			"only": ["Apache-PHP"]
		},
		{
			"type": "docker-tag",
			"repository": "packer-mysql",
			"tag": "0.1",
			"only": ["MySQL"]
		}
	]
}